/* GENERAL */
html
{
	background: url(captiveportal-logon.png) no-repeat fixed center; /* 400x400 */
}
html, body, td, th, input, select {
	font-family: Tahoma, Verdana, Arial, Helvetica, sans-serif;
	font-size: 0.9em;
}
label
{
    display: block;
}
#wrapper, #accept, .hideMe
{
	display: none;
}
#userText
{
	font-size: 20pt;
	font-weight: bold;
	font-family: Frutiger, Lucida Grande, Lucida Sans, Arial, sans-serif; /* Frutiger font is like Windows10 */
	text-align: center;
}

/* LOGOUT FORM */
.logoutform
{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);	/* Moves form to center */
	font-size: medium;
}
#userText
{
	margin-top: 100px;
}
.timeLeft
{
	text-align: center;
}
#keepOpen
{
	text-align: center;
	color: white;
	font-style: italic;
}
#logout2
{
	margin-top: 15px;
	margin-left: 60px;
	min-width: 100px;					/* Makes same size */

	color: #fff;						/* White */
	border: 1px solid rgba(0, 0, 0, .3);
	border-radius: 3px;					/* Cornered edges */
	background: #64c8ef; 				/* Old browsers */

	display: table;
}

/* LOGOUT STATUS */
#status
{
	width: 100%;
	opacity: 80;
	color: white;
	background-color: green;
	text-align: center;
}

/* DISCONNECT PAGE */
#dc
{

}
#dcbg
{
    color: white;
    background-color: black;
}

/* LOGIN FORM */
#loginformsection
{

}
.loginform
{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);	/* Moves form to center */
	margin-left: -20px; 				/* Centers form */
	font-size: medium;
}
.loginform ul {
	list-style-type: none; 				/* Removes bullets */
	margin-top: 115px; 					/* Centers form vertically */
}

input
{
	background-color: white; 			/* Prevents blending into bg */
}
/* BUTTONS */
#accept2, #register
{
	margin-top: 15px;
	margin-left: 20px;
	min-width: 100px;					/* Makes same size */

	color: #fff;						/* White */
	border: 1px solid rgba(0, 0, 0, .3);
	border-radius: 3px;					/* Cornered edges */
	background: #64c8ef; 				/* Old browsers */

	display: table;
}
#accept2:hover
{
	background-color: green;
}
#register:hover
{
	background-color: orange;
}
#logout2:hover
{
	background-color: red;
}

/* DIALOG BOX */
#dialog
{
	margin-bottom: -100px;
	text-align: center;
}
.ui-dialog .ui-dialog-titlebar
{
	width: 100%;
	text-align: center;
}
.ui-dialog .ui-dialog-title .ui-icon
{
	float: left;
	margin-right: 4px;
}
.error
{
	border-color: #f00;
}

/* PROGRESS BAR */
.ui-progressbar
{
    position: relative;
}
.progress-label
{
    position: absolute;
    left: 50%;
    top: 4px;
    font-weight: bold;
    text-shadow: 1px 1px 0 #fff;
}

/* TOS ACCORDION */
#tos
{
	/* max-width: 400px; */
}
#tos h3
{
	font-size: 0.8em;
	text-align: center;
	position: absolute;
}
#tos p
{
	font-size: 0.8em;
	font-weight: normal;
	text-align: center;
}
#tos .ui-accordion-content
{
	background-color: blue;
	color: gray;
	line-height: 16pt;
}
#tos .ui-state-active {
	background: url("captiveportal-ui-bg_gloss-wave_55_5c9ccc_500x100.png");
	color: white;
}